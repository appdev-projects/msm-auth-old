<h1>
  All characters
</h1>

<a href="/characters/new">
  Add a new character
</a>

<hr>

<table class="table">
  <tr>
    <th>
      Movie
    </th>

    <th>
      Actor
    </th>

    <th>
      Name
    </th>

    <th>
    </th>
  </tr>

  <% @characters.each do |character| %>
  <tr>
    <td>
      <a href="/movies/<%= character.movie_id %>">
        <%= character.movie.title %>
      </a>
    </td>

    <td>
      <a href="/actors/<%= character.actor_id %>">
        <%= character.actor.name %>
      </a>
    </td>

    <td>
      <%= character.name %>
    </td>

    <td>
      <a href="/characters/<%= character.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
