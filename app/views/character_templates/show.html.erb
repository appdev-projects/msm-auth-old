<h1>
  Character #<%= @character.id %> details
</h1>

<a href="/characters">
  Go back
</a>

<hr>

<dl>
  <dt>
    Movie
  </dt>
  <dd>
    <a href="/movies/<%= @character.movie_id %>">
      <%= @character.movie.title %>
    </a>
  </dd>

  <dt>
    Actor
  </dt>
  <dd>
    <a href="/actors/<%= @character.actor_id %>">
      <%= @character.actor.name %>
    </a>
  </dd>

  <dt>
    Name
  </dt>
  <dd>
    <%= @character.name %>
  </dd>
</dl>


<div class="row mb-4">
  <div class="col">
    <a href="/characters/<%= @character.id %>/edit" class="btn btn-block btn-outline-secondary">
      Edit character
    </a>
  </div>

  <div class="col">
    <a href="/delete_character/<%= @character.id %>" class="btn btn-block btn-outline-secondary">
      Delete character
    </a>
  </div>
</div>
