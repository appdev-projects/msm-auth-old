<h1>
  Actor #<%= @actor.id %> details
</h1>

<a href="/actors/<%= @actor.id %>/edit">
  Edit actor
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor.bio %>
  </dd>

  <dt>
    Image url
  </dt>
  <dd>
    <%= @actor.image_url %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@actor.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@actor.updated_at) %> ago
  </dd>
</dl>

<a href="/delete_actor/<%= @actor.id %>" class="btn btn-default">
  Delete actor
</a>

<hr>

<a href="/actors">
  Go back
</a>
